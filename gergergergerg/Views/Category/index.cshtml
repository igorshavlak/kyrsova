@model IEnumerable<gergergergerg.Models.Category>
<div class = "container p-3 bg-white">
    <div class = "row pt-4">
        <div class = "col-6"> 
            <h2 class = "text-primary">Category List</h2>
        </div>
        <div class = "col-6 text-right" > 
            <a asp-controller="Category" asp-action="Create" class = "btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create new Category</a>
        </div>
    </div>
    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class = "table table-bordered table-striped" style = "width:100%">
            <thred>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thred>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width = "50%">
                            @obj.Name
                        </td>
                         <td width = "50%">
                            @obj.DisplayOrder 
                        </td>
                        <td width = "30%">
                            <div class ="w-75 btn-group" role = "group">
                                <a asp-controller="Category" asp-route-Id = "@obj.Id" asp-action = "Edit" class="btn btn-primary" mx-1>
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Edit
                                </a>
                                <a asp-controller="Category" asp-route-Id = "@obj.Id" asp-action = "Delete" class="btn btn-danger">
                                    <i class="fa-solid fa-trash-can"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    }
    else
    {
        <p>Category not found</p>
    }
</div>

  