@model IEnumerable<gergergergerg.Models.Product>
<div class = "container p-3 bg-white">
    <div class = "row pt-4">
        <div class = "col-6"> 
            <h2 class = "text-primary">Product List</h2>
        </div>
        <div class = "col-6 text-right" > 
            <a asp-controller="Product" asp-action="Upsert" class = "btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create new Product</a>
        </div>
    </div>
    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class = "table table-bordered table-striped" style = "width:100%">
            <thred>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Application Type
                    </th>
                </tr>
            </thred>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width = "30%">
                            @obj.Name </td>
                         <td width = "10%">
                            @obj.Price</td>                       
                        <td width = "20%">
                            @obj.Category.Name</td>
                        <td width = "20%">                         
                            @obj.ApplicationType.Name</td>
                        <td class = "text-center">
                            <div class ="w-75 btn-group" role = "group">
                                <a  asp-route-Id = "@obj.Id" asp-action = "Upsert" class="btn btn-primary" mx-1>
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a  asp-route-Id = "@obj.Id" asp-action = "Delete" class="btn btn-danger">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    }
    else
    {
        <p>No product exist.</p>
    }
</div>

  